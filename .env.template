# Configuration pour déploiement avec Traefik (OBLIGATOIRE)
STACK_NAME=donald-nexus
DOMAIN=credalyx.com
EMAIL=contact@credalyx.com

# Configuration de l'environnement
ENVIRONMENT=production
DEBUG=False
ALLOWED_HOSTS=api.${STACK_NAME}.${DOMAIN},localhost,127.0.0.1

# Django Settings
SECRET_KEY=change-this-in-production-please-use-strong-key

# Database Configuration (PostgreSQL)
POSTGRES_DB=nexus_db
POSTGRES_USER=nexus_user
POSTGRES_PASSWORD=change-this-password-in-production
POSTGRES_PORT=5432
DB_ENGINE=django.db.backends.postgresql
DB_NAME=${POSTGRES_DB}
DB_USER=${POSTGRES_USER}
DB_PASSWORD=${POSTGRES_PASSWORD}
DB_HOST=db
DB_PORT=${POSTGRES_PORT}

# Redis Configuration (for Celery & Caching)
REDIS_URL=redis://redis:6379/0

# GraphQL Settings
GRAPHQL_ENDPOINT=/graphql/
GRAPHIQL=False

# Celery Configuration
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

# CORS Settings
BACKEND_CORS_ORIGINS=https://${STACK_NAME}.${DOMAIN},https://api.${STACK_NAME}.${DOMAIN}
CORS_ALLOWED_ORIGINS=${BACKEND_CORS_ORIGINS}

# Media & Static Files
MEDIA_URL=/media/
STATIC_URL=/static/

